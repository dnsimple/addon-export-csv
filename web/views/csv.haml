%form{method: "POST"}
  %button.dn-btn.dn-btn-primary{type: "submit"}
    Download CSV

.pt3.pb3.overflow-x-auto
  %table.dn-table
    %tr
      %th.w-50 Domain Name
      %th State
      %th Expiration
      %th Whois privacy
      %th Auto renewal
    - if @domains.nil?
      You are currently managing zero domains under this account
    - else
      -@domains.each do |domain|
        %tr
          %td
            =domain.name
          %td
            =domain.state
          %td
            =domain.expires_on || "-"
          %td
            =domain.private_whois
          %td
            =domain.auto_renew
